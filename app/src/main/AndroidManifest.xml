<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mamadou.tutor">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <intent-filter>
            <action android:name="android.intent.action.Search" />
        </intent-filter>

        <meta-data
            android:name="android.app.default_searchable"
            android:value=".StudentMainPage" />
        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <activity
            android:name=".StudentMainPage"
            android:label="@string/title_activity_student__main__page"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TutorMainPage"
            android:label="@string/title_activity_tutor_main_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StudentDetails"
            android:label="@string/title_activity_student_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TutorDetails"
            android:label="@string/title_activity_tutor_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Registration"
            android:label="@string/title_activity_registration" />
        <activity
            android:name=".AddCompetence"
            android:label="@string/title_activity_add_competence"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Bill"
            android:label="@string/title_activity_bill"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Calendar"
            android:label="@string/title_activity_calendar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Courses"
            android:label="@string/title_activity_courses"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MyTutoring"
            android:label="@string/title_activity_my_tutoring"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>